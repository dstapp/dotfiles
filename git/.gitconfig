[user]
    name = David Prandzioch
    email = git@davd.io

[color]
    ui = auto

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    ap = "add -p"
    h = "log --pretty=format:'%h - %s%d (%ar) <%an>' --graph --date=short"
    type = "cat-file -t"
    dump = "cat-file -p"
    aa = "add -A"
    pa = "push origin --all"
    di = diff
    dc = "diff --cached"
    p = "pull origin"
    rao = "remote add origin"
    ai = "add --patch --interactive"
    amend = commit --amend

[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	autocrlf = input

[push]
	default = current
	autoSetupRemote = true

[merge]
    tool = vimdiff
[pull]
	rebase = false
